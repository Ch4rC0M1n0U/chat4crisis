// Prisma schema for chat4crisis

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Room {
  id          String    @id @default(cuid())
  code        String    @unique
  createdAt   DateTime  @default(now())
  participants Participant[]
  messages    Message[]
  events      CrisisEvent[]
}

model Participant {
  id        String   @id @default(cuid())
  name      String
  role      String   @default("user")
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String
  joinedAt  DateTime @default(now())
  lastSeen  DateTime @updatedAt
}

model Message {
  id        String   @id @default(cuid())
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String
  sender    String
  content   String
  type      String   @default("TEXT") // TEXT | SYSTEM | EVENT | AUDIO
  createdAt DateTime @default(now())
}

model CrisisEvent {
  id          String   @id @default(cuid())
  room        Room     @relation(fields: [roomId], references: [id])
  roomId      String
  title       String
  description String
  severity    Int      @default(1)
  scheduledAt DateTime?
  createdAt   DateTime @default(now())
  dispatched  Boolean  @default(false)
}
